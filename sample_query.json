GET /moocs/course/_search
{
  "_source": {
    "includes": ["name", "url"],
    "excludes": ["*.*"]
  },
  "query": {
    "bool": {
      "should": [
        {
          "match": {
            "name": "sample"
          }
        },
        {
          "nested": {
            "path": "docs",
            "score_mode": "avg",
            "query": {
              "multi_match": {
                "type": "most_fields",
                "query": "sample",
                "fields": ["docs.name", "docs.content"]
              }
            },
            "inner_hits": {
              "_source" : false,
              "highlight": {
                "fields": {
                  "docs.name": {
                    "no_match_size": 100,
                    "number_of_fragments" : 1
                  },
                  "docs.content": {}
                }
              }
            }
          }
        }
      ]
    }
  }
}
